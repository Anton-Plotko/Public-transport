<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Рассписание общественного транспорта г.Брест,Беларусь</title>
    @await RenderSectionAsync("IndexStyle", required: false)
    @await RenderSectionAsync("TrolleybusesStyle", required: false)
    @await RenderSectionAsync("BusesStyle", required: false)
    @await RenderSectionAsync("StopsStyle", required: false)
    @await RenderSectionAsync("TimeStyle", required: false)
    @await RenderSectionAsync("TransportStyle", required: false)
    @await RenderSectionAsync("AllStopsStyle", required: false)
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/css/LayoutStyle.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="bar-line">
            <div class="bar-line__left">
            <a class="gradient-button" href="/Index">Маршруты</a>
            <a class="gradient-button" href="/AllStops">Остановки</a>
            </div>
        <div class="bar-line__right">
            <div id="current_date_time_block"></div>
            <script type="text/javascript">

                    
                function zero_first_format(value) {
                    if (value < 10) {
                        value = '0' + value;
                    }
                    return value;
                }

                function date_time() {
                    var current_datetime = new Date();
                    var day = zero_first_format(current_datetime.getDate());
                    var month = zero_first_format(current_datetime.getMonth() + 1);
                    var year = current_datetime.getFullYear();
                    var hours = zero_first_format(current_datetime.getHours());
                    var minutes = zero_first_format(current_datetime.getMinutes());
                    var seconds = zero_first_format(current_datetime.getSeconds());
                        
                       
                    return new Date().toLocaleString('ru-ru', { weekday: 'long'}) + " " +day + "." + month + "." + year + " " + hours + ":" + minutes + ":" + seconds;
                }
            </script>
                <div class="bar-line__right__time">
                <div class="text" id="current_date_time_block2"></div>
                </div>
            <script type="text/javascript">

                setInterval(function () {
                    document.getElementById('current_date_time_block2').innerHTML = date_time();
                }, 1000);

            </script>
        </div>
        </div>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>